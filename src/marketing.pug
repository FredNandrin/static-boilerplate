extends layout/master-view

block content
    - var language = "Pug"
    .row.marketing
        .span6
            h4 Starter template
            <img src="http://twitter.github.com/bootstrap/assets/img/examples/bootstrap-example-starter.jpg" alt="">
            p
                | A barebones HTML document with all the Bootstrap CSS and JavaScript included. &nbsp;
                a(href='/starter') View&gt;&gt;
            h4 Fluid layout
            <img src="http://twitter.github.com/bootstrap/assets/img/examples/bootstrap-example-fluid.jpg" alt="">
            p
                | Uses our new responsive, fluid grid system to create a seamless liquid layout. &nbsp;
                a(href='/fluid') View&gt;&gt;
            h4 Sign in
            <img src="http://twitter.github.com/bootstrap/assets/img/examples/bootstrap-example-signin.png" alt="">
            p
                | Barebones sign in form with custom, larger form controls and a flexible layout. &nbsp;
                a(href='/signin') View&gt;&gt;
        .span6
            h4 Basic marketing site
            <img src="http://twitter.github.com/bootstrap/assets/img/examples/bootstrap-example-hero.jpg" alt="">
            p
                | Featuring a hero unit for a primary message and three supporting elements. &nbsp;
                a(href='/marketing') View&gt;&gt;
            h4 Narrow marketing
            <img src="http://twitter.github.com/bootstrap/assets/img/examples/bootstrap-example-marketing-narrow.png" alt="">
            p
                | Slim, lightweight marketing template for small projects or teams. &nbsp;
                a(href='/narrow') View&gt;&gt;
            h4 Sticky footer
            <img src="http://twitter.github.com/bootstrap/assets/img/examples/bootstrap-example-sticky-footer.png" alt="">
            p
                | Pin a fixed-height footer to the bottom of the user's viewport. &nbsp;
                a(href='/sticky') View&gt;&gt;